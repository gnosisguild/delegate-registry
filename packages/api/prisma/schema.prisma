datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model DelegationEvent {
    id String @id

    chainId          Int
    registry         String
    blockNumber      Int
    transactionIndex Int
    logIndex         Int
    blockTimestamp   Int

    spaceId String
    account String
    topics  String[]
    data    String

    @@index([spaceId])
    @@index([account])
}

model Checkpoint {
    chainId        Int
    registry       String
    blockNumber    Int
    blockTimestamp Int

    @@id([chainId, registry])
}

enum EventKind {
    Set
    Clear
    Expiration
    OptOut
}
