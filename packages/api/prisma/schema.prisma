datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Event {
    id String @id

    chainId        Int
    registry       String
    blockNumber    Int
    blockTimestamp Int
    logIndex       Int

    space   String
    account String
    kind    EventKind

    topics String[]
    data   String[]

    @@index([space])
    @@index([account])
}

model Checkpoint {
    chainId        Int
    registry       String
    blockNumber    Int
    blockTimestamp Int

    @@id([chainId, registry])
}

enum EventKind {
    Set
    Clear
    Expiration
    OptOut
}
