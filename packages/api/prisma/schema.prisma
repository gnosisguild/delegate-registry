datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
    provider = "prisma-client-js"
}

model DelegationEvent {
    id String @id

    chainId          Int
    registry         String
    blockNumber      Int
    blockTimestamp   Int
    transactionIndex Int
    logIndex         Int

    spaceId String
    account String
    topics  String[]
    data    String

    @@index([spaceId])
    @@index([account])
    @@index([blockNumber])
    @@index([blockTimestamp])
}

model Checkpoint {
    chainId     Int @id
    blockNumber Int
}
